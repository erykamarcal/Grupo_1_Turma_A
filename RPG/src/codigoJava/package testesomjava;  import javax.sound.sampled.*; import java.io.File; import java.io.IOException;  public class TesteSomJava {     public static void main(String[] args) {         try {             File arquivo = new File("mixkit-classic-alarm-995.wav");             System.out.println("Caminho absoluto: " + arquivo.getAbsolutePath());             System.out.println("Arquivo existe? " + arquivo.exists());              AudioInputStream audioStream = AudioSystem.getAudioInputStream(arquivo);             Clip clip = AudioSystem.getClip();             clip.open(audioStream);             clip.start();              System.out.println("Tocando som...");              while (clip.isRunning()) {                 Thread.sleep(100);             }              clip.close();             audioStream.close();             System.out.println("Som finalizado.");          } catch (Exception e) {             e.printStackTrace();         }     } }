package testesomjava;

//editando

import javax.sound.sampled.*;
import java.io.File;
import java.io.IOException;

public class TesteSomJava {
    public static void main(String[] args) {
        try {
            File arquivo = new File("mixkit-classic-alarm-995.wav");
            System.out.println("Caminho absoluto: " + arquivo.getAbsolutePath());
            System.out.println("Arquivo existe? " + arquivo.exists());

            AudioInputStream audioStream = AudioSystem.getAudioInputStream(arquivo);
            Clip clip = AudioSystem.getClip();
            clip.open(audioStream);
            clip.start();

            System.out.println("Tocando som...");

            while (clip.isRunning()) {
                Thread.sleep(100);
            }

            clip.close();
            audioStream.close();
            System.out.println("Som finalizado.");

        } catch (Exception e) {
            e.printStackTrace();
        }
    }
}
